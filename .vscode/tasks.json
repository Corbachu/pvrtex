{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "buildType",
      "type": "pickString",
      "description": "CMake build type",
      "options": ["Debug", "Release"],
      "default": "Release"
    }
  ],
  "tasks": [
    {
      "label": "CMake: configure",
      "type": "shell",
      "command": "${config:cmake.cmakePath}",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-G",
        "${config:pvrtex.cmake.generator}",
        "-A",
        "${config:pvrtex.cmake.arch}"
      ],
      "problemMatcher": []
    },
    {
      "label": "CMake: build",
      "type": "shell",
      "command": "${config:cmake.cmakePath}",
      "args": [
        "--build",
        "build",
        "--config",
        "${input:buildType}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["CMake: configure"],
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "CMake: clean",
      "type": "shell",
      "command": "${config:cmake.cmakePath}",
      "args": [
        "--build",
        "build",
        "--target",
        "clean",
        "--config",
        "${input:buildType}"
      ],
      "problemMatcher": []
    }
  ]
}
